<!DOCTYPE html>
<html lang="en">
  <% include title.ejs %> 
  <head>
    <% include navigation.ejs %> 
  </head>
  <body>
    <table>
      <th>â„–</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Trips</th>
      <% for (let i = 0; i < customers.length; ++i) { %>
      	<tr>
          <td><%= i+1%></td>
          <td><%= customers[i].firstName %></td>
          <td><%= customers[i].lastName %></td>
          <td>
            <ul>
            <% for (let j = 0; j < customers[i].trips.length; ++j) { %>
              <li><%= customers[i].trips[j]%></li>
            <% } %>
            <a href="http://localhost:3000/customers/edit/<%=customers[i].id %>">EDIT</a>
            <a href="http://localhost:3000/customers/delete/<%=customers[i].id %>">DELETE</a>
            </ul>
          </td>
        </tr>
      <% } %>
    </table>

    <form id = "form" action="/customers" method="post" type="application">
    	<input type="text" name="firstName" title="First Name" placeholder="First Name" />
    	<input type="text" name="lastName" title="Last Name" placeholder="Last Name" />
      <% include checkTrips.ejs %> 
    	<br/> <input type="submit" value="ADD" />
    </form>
    
  </body>
</html>	